<Window x:Class="ProjectWPF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300"
        ResizeMode="NoResize">
    <Grid>
        <Button x:Name="Button_Book" Content="Книги" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" Width="150" Height="50"/>
        <Button x:Name="Button_Genre" Content="Жанры" HorizontalAlignment="Center" Margin="0,175,0,0" VerticalAlignment="Top" Width="150" Height="50" Click="Button_Genre_Click"/>
        <Button x:Name="Button_Author" Content="Авторы" HorizontalAlignment="Center" Margin="0,275,0,0" VerticalAlignment="Top" Width="150" Height="50" Click="Button_Author_Click"/>
    </Grid>


</Window>
